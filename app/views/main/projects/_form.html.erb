<p>
  <label>Project Name</label>
  <%= f.text_field :name, :style => "width: 600px;" %>
</p>

<p>
  <label>Overview Page Announcement <cite>(<%= link_to "Textile", "http://hobix.com/textile/", :target => "_blank" %> enabled)</cite></label>
  <%= f.text_area :overview_page_announcement, :cols => 70, :rows => 10, :style => "width: 600px;" %><br/>
  <label style="display: inline;"><%= f.check_box :display_overview_page_announcement %></label> Yes, display this announcement on the overview page
</p>

<p>
  <label>Primary Company</label>
  <select name="project[primary_company_id]" id="project_primary_company_id">
    <option value="0">Personal</option>
    <%= options_from_collection_for_select(@account.companies, "id", "name", @project.primary_company_id) %>
  </select>
</p>

<p>
  <label style="display: inline;"><%= f.check_box :is_public %></label>
  Is a public project?
</p>