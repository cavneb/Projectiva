<% form_for :person, @person, :url => { :action => "update_person", :id => @person.id } do |f| %>
<fieldset>

  <%= display_flash(flash) %>
  <%= error_messages_for 'person' %>
  
  <%= render :partial => "person_form", :locals => { :f => f } %>
  
  <p class="submit">
    <%= submit_tag "Update Person" %>
    or <%= link_to "Cancel", :action => "index" %>
  </p>

</fieldset>
<% end %>