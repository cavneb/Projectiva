<% form_for :person, @person, :url => { :action => "create_person" } do |f| %>
<fieldset>

  <%= display_flash(flash) %>
  <%= error_messages_for 'person' %>
  
  <%= render :partial => "person_form", :locals => { :f => f } %>
  
  <p class="submit">
    <%= submit_tag "Add Person" %>
    or <%= link_to "Cancel", :action => "index" %>
  </p>

</fieldset>
<% end %>