<% form_for :color_scheme, @color_scheme, :url => { :action => "update_color_scheme", :id => @color_scheme } do |f| %>
<fieldset>

  <%= display_flash(flash) %>
  
  <p>
    <label>Name</label>
    <%= f.text_field :name %>
  </p>
  
  <p>
    <label>Default Value</label>
    <%= f.text_field :default_hex_value %>
  </p>
  
  <p class="submit">
    <%= submit_tag "Update Default Color" %>
    or <%= link_to "Cancel", backdoor_default_settings_path(:color_schemes) %>
  </p>

</fieldset>
<% end %>