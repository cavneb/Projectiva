form fieldset {
	border: 0;
}

form fieldset input, form fieldset textarea {
	border-bottom: 1px solid #888;
	border-right: 1px solid #888;
	border-top: 1px solid #aaa;
	border-left: 1px solid #aaa;
	padding: 3px;
	font-size: 1.1em;
}

form fieldset textarea {
	font-family: Verdana, Arial, Helvetica, sans-serif;
}

form fieldset p {
  margin: 0;
	padding: 10px;
	border-bottom: 1px dashed #d0d0d0;
}

form fieldset p:hover {
	background-color: #F6F6F6;
}

form fieldset p.submit:hover {
	background-color: #fff;
}

form fieldset p.submit {
	font-size: .8em;
	border-bottom: 0;
}

form fieldset p.regular {
	border-bottom: 0;
}
form fieldset p.regular:hover {
	background-color: #fff;
}

form fieldset p.hilight {
	border-bottom: 0;
	background-color: #FFFFD6;
}
form fieldset p.hilight:hover {
	background-color: #FFFFD6;
}

form fieldset p.submit input {
	border-right: 2px solid #848484;
	border-bottom: 2px solid #848484;
	border-top: 2px solid #FAFAFA;
	border-left: 2px solid #FAFAFA;
	font-size: 1.2em;
}

form fieldset label {
	display: block;
	font-weight: bold;
}

form fieldset cite {
	margin-left: 10px;
	font-weight: normal;
	color: #666;
}