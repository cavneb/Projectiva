body {
	background-color: #fff !important;
}
form fieldset {
	border-top: 1px solid #ccc;
	background-color: #F1F5FA;
	margin-bottom: 10px;
}
form fieldset legend {
	font-weight: bold;
	font-size: 1.2em;
}
form fieldset p:hover {
	background-color: #F1F5FA;
}
form fieldset p.regular:hover {
	background-color: #F1F5FA;
}
form fieldset p.hilight:hover, form fieldset p.hilight {
	background-color: #FAF6F1;
}
form fieldset p.submit:hover {
	background-color: #F1F5FA;
}